@using static AuthBackend.Controllers.AccountController;
@model InputModel

@{
    ViewData["Title"] = "Log in";
}

@if (!User.Identity!.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-4" style="float:none;margin:auto;">
            <section>
                <form id="account" method="post">
                    <h2>Login</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="UserName" class="form-label"></label>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Password" class="form-label"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
}
else
{
    <h2>This is just an authentication system, there is nothing else from here‼</h2>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
